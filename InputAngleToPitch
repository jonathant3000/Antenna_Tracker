/*
 * note:  We are assuming earth is sufficiently large --> earth is flat.
 *        If this is a problem, edit "Movement()" at the "pan" section
 */

#include <Stepper.h>


#define STEPS 2048 //number of steps on your motor(2048 steps)


Stepper stepper(STEPS, 8, 10, 9, 11);// create an instance of the stepper class;stepper(# of steps on motor, pinA1, pinB1, pinA2, pinB2), for Pairs A and B

// block below: the initial reading from the analog input
int posInitialPan = 0;   // holds on to the current position
int posFinalPan = 0;     // holds on to the final value
int posInitialPitch = 0;   // holds on to the current position
int posFinalPitch = 0;     // holds on to the final value
int val;              // posFinal mapped to steps range
int checker;          // checks for difference in "initial" and "final"

void movement(double anglePan, double anglePitch){
  servo.write = posFinalPitch;//sets servo to "angle from the ground"(degree)
  
  stepper.step(anglePan - posInitialPan);//sets stepper to "angle flat on ground"(degree)
  posInitialPan = anglePan;
}
void setup() {  //fix me
  stepper.setSpeed(30); // set the speed of the motor(30 RPM)
  Serial.begin(9600);
}

void loop() {
  if(Serial.available() > 0)){
    anglePan = Serial.readBytes(buffer, 256)
    anglepitch = 
    movement(anglePan, anglepitch)
  }
}
